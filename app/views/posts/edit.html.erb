<h1>Edit your post</h1>

<div class="form-group">
<%= form_for @post do |f| %>

	 <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h2>post
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list, value: @post.tag_list.to_s,class: "form-control" %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", rows: '4' %>
  </p>
 
 <p>
 	<%= f.label :published %><br />
    <%= f.label :published, "Yes", :value => "true"  %>
    <%= f.radio_button :published, true %>
    <%= f.label :published, "No", :value => "false" %>
    <%= f.radio_button :published, false %>
 </p>
  <p>
    <%= f.submit 'Submit', :class => "btn btn-success form-control" %>
  </p>
<% end %>
</div>

<%= link_to 'Back', posts_path %>

