<div class="wrapper">
	<div class="tag_cloud">
		
	</div>
  	<div class="posts">
	  	<% @posts.each do |post| %>

	  	<% if post.published == true %>
			<!-- Body or content of post -->
			#<%= post.id %><span class="post-date text-muted"><%= time_ago_in_words(post.created_at) %> ago</span>
			<p>
			<%= simple_format(post.body) %>
			</p>
			Tags: 
				<%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
			
			</br>
		<% end %>	
		<% end %>
	</div>
</div>
  





