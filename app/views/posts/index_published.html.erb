<div class="wrapper">

	<%= form_tag(published_posts_path, method: :get) do %>
	  <%= text_field_tag :search, params[:search] %>
	  <%= submit_tag 'Search', name: nil %>
	<% end %>

	<div class="tags-container">
		<% @tags.each do |tag| %>
			<%= link_to tag.name, tags_published_path(tag.name), class: "btn btn-outline-primary" %>
		<% end %>
	</div>

	<div class="pagination" >
		<%= will_paginate @posts %>
	</div>
	
  	<div class="posts">
	  	<% @posts.each do |post| %>
			<!-- Body or content of post -->
			#<%= post.id %><span class="post-date text-muted"><%= time_ago_in_words(post.created_at) %> ago</span>
			<p>
			<%= simple_format(post.body) %>
			</p>
<!-- 				<%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %> -->						
				<div class= "post-tags">
				<% post.tag_list.each do |tag| %>
					<span class="tags"><%= link_to tag, tag_path(tag), class: "btn btn-outline-primary btn-sm" %></span>
				<% end %>
				</div>

			<hr>
			</br>
			</br>
			</br>

		<% end %>
		</br>
		</br>	
	</div>
	<div class="pagination" >
		<%= will_paginate @posts %>
	</div>	
</div>
  





