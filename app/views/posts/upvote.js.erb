<% if current_user.liked? @post %>
 	$('.upvote-btn-<%= @post.id %>').removeClass('alert-info').addClass('alert-warning')
 	$('.downvote-btn-<%= @post.id %>').removeClass('alert-warning')
<% else %>
 	$('.upvote-btn-<%= @post.id %>').removeClass('alert-warning').addClass('alert-info')
<% end %>
	$('.likes-count-<%= @post.id %>').html("<%=@post.weighted_score %>")